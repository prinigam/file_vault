<p><strong>Title:</strong> <%= @upload.title %></p>
<p><strong>Description:</strong> <%= @upload.description %></p>
<p><strong>File Type:</strong> <%= @upload.file_type %></p>
<p><strong>File Size:</strong> <%= number_to_human_size(@upload.file_size) %></p>

<% if @upload.file.attached? %>
  <p><strong>Download:</strong>
    <%= link_to "Download File", rails_blob_url(@upload.file, disposition: "attachment"), target: "_blank" %>
  </p>
<% end %>
<% if @upload.url.present? %>
  <p>
    <strong>Public Share URL:</strong>
    <%= link_to shared_upload_url(@upload.url), shared_upload_url(@upload.url), target: "_blank" %>
  </p>
<% end %>
