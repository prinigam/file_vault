
<% if notice %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>


<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0 text-gradient fw-bold">Uploads</h1>
  <%= link_to new_upload_path, class: "btn btn-new-upload shadow-lg" do %>
    <i class="bi bi-cloud-arrow-up-fill"></i>
    New Upload
  <% end %>
</div>



<div class="row g-4">
  <% @uploads.each do |upload| %>
    <div class="col-12 col-md-6 col-lg-3">
      <div class="glass-card h-100 border-0 shadow-lg rounded-4 overflow-hidden position-relative">
        <div class="accent-bar position-absolute top-0 start-0"></div>
        <div class="card-body bg-transparent">
          <div class="d-flex align-items-center mb-2">
            <div class="bg-primary bg-gradient text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width:2.5rem;height:2.5rem;font-size:1.3rem;">
              <i class="bi bi-file-earmark-arrow-up"></i>
            </div>
            <h5 class="card-title mb-1">
              <%= upload.title.presence || 'Untitled' %>
            </h5>
            <div>
              <span class="badge-filetype"><%= upload.file_type.to_s.split('/').last.upcase.presence || 'N/A' %></span>
            </div>
          </div>
          <p class="card-text text-muted small mb-2" style="min-height:1.5em;">
            <%= upload.description.present? ? truncate(upload.description, length: 80) : '&nbsp;'.html_safe %>
          </p>
          <div class="mb-3">
            <div class="mb-1">
              <span class="fw-semibold text-secondary small">Size:</span>
              <span class="small ms-2">
                <%= upload.file_size.present? ? number_to_human_size(upload.file_size) : 'N/A' %>
              </span>
            </div>
            <div>
              <span class="fw-semibold text-secondary small">URL:</span>
              <span class="small ms-2 bg-light rounded-3 px-2 py-1 d-inline-block text-break text-truncate" style="max-width: 90%; font-size:0.92em; vertical-align: middle;" title="<%= upload.url.presence || 'N/A' %>">
                <%= upload.url.present? ? (upload.url.length > 48 ? upload.url.first(45) + '...' : upload.url) : 'N/A' %>
              </span>
            </div>
          </div>
          <div class="d-flex justify-content-between align-items-center mt-3">
            <%= link_to "Show", upload, class: "btn btn-outline-primary btn-sm rounded-pill px-3" %>
            <%= button_to "Delete", upload_path(upload), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm rounded-pill px-3" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="d-flex justify-content-center mt-5">
  <%= paginate @uploads if defined?(paginate) %>
</div>
