
<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body text-center p-5">
          <h1 class="mb-4">Welcome to FileVault</h1>
          <% if user_signed_in? %>
            <p class="lead mb-4">Logged in as <strong><%= current_user.email %></strong></p>
            <div class="d-flex flex-column gap-3 align-items-center">
              <%= link_to 'My Uploads', uploads_path, class: 'btn btn-primary px-4' %>
              <%= link_to 'New Upload', new_upload_path, class: 'btn btn-outline-primary px-4' %>
            </div>
          <% else %>
            <p class="lead mb-0">Sign up or log in to start uploading your files.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
